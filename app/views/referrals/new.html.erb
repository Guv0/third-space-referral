<div class="wrapper">
  <div class="header">
    <h1>Give 100, Get £100!</h1>
  </div>
  <div class="container page">
    <div class="row steps">
      <div class="step col-xs-12 col-md-4">
        <div class="square-grey">
          <img src="../assets/images/third-space-one.png" alt="image1">
          <div class="circle-blue">
           <strong>1</strong>
         </div>
       </div>
       <div class="step-text">
        <h3>Recommend us to another school</h3>
      </div>
    </div>
    <div class="step col-xs-12 col-md-4">
      <div class="square-grey">
        <img src="../assets/images/third-space-two.png" alt="image2">

        <div class="circle-blue">
          2
        </div>
      </div>
      <div class="step-text">
        <h3>The school signs up for next term</h3>
      </div>
    </div>
    <div class="step col-xs-12 col-md-4">
      <div class="square-grey">
        <img src="../assets/images/third-space-three.png" alt="image3">

        <div class="circle-blue">
          3
        </div>
      </div>
      <div class="step-text">
        <h3>You both get £100</h3>
      </div>
    </div>
  </div>
  <div class="container referrals">
    <div class="row list-inline center">
      <div class="col-xs-12 col-sm-5">
        <div class="forward">
          <h3>Forward you unique school code to other schools:</h3>
        </div>
      </div>
      <div class="col-xs-12 col-sm-5">
        <div class="refer">
          <h3>Use our template to send lots of recommendations quickly:</h3>
          <%= form_for(@referral) do |f| %>
            <%= f.text_field :email %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row social">
    <div class="social-text">
      <h3>Or share using Social Media:</h3>
    </div>
    <div class="col-xs-12 col-md-4 col-md-offset-4 list-inline center">
      <button class="btn btn-social">
        <i class="fa fa-facebook" aria-hidden="true"></i>
      </button>
      <button class="btn btn-social">
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </button>
      <button class="btn btn-social">
        <i class="fa fa-linkedin" aria-hidden="true"></i>
      </button>
      <button class="btn btn-social">
        <i class="fa fa-google-plus" aria-hidden="true"></i>
      </button>
    </div>
  </div>
</div>
</div>

